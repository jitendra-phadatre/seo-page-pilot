    },
    "AllowedFontSrc": {
      "dev": {
        "Value": ""
      },
      "qa": {
        "Value": ""
      },
      "stage": {
        "Value": ""
      },
      "prod": {
        "Value": ""
      }
    },
    "AllowCorsOrigin": {
      "dev": {
        "Value": ""
      },
      "qa": {
        "Value": ""
      },
      "stage": {
        "Value": ""
      },
      "prod": {
        "Value": ""
      }
    }
  },
  "AWSTemplateFormatVersion": "2010-09-09",
  "Resources": {
    "ProxyFunctionRole": {
      "Type": "AWS::IAM::Role",
      "Properties": {
        "RoleName": {
          "Fn::Join": [
            "-",
            [
              {
                "Ref": "Environment"
              },
              "seo-management-app-Role"
            ]
          ]
        },
        "AssumeRolePolicyDocument": {
          "Version": "2012-10-17",
          "Statement": [
            {
              "Action": [
                "sts:AssumeRole"
              ],
              "Effect": "Allow",
              "Principal": {
                "Service": [
                  "lambda.amazonaws.com"
                ]
              }
            }
          ]
        },
        "Policies": [
          {
            "PolicyName": "seo-management-app-Policy",
            "PolicyDocument": {
              "Version": "2012-10-17",
              "Statement": [
                {
                  "Effect": "Allow",
                  "Action": [
                    "s3:*"
                  ],
                  "Resource": "*"
                }
              ]
            }
          }
        ],
        "ManagedPolicyArns": [
          "arn:aws:iam::aws:policy/service-role/AWSLambdaBasicExecutionRole",
          "arn:aws:iam::aws:policy/AmazonSSMReadOnlyAccess",
          "arn:aws:iam::aws:policy/service-role/AWSLambdaVPCAccessExecutionRole",
          {
            "Fn::Sub": "arn:aws:iam::${AWS::AccountId}:policy/Account-Secret-Manager-Access-Policy"
          }
        ]
      }
    },
    "ProxyFunction": {
      "Type": "AWS::Lambda::Function",
      "Properties": {
        "Architectures": [
          "arm64"
        ],
        "FunctionName": {
          "Fn::Join": [
            "-",
            [
              {
                "Ref": "Environment"
              },
              "seo-management-app"
            ]
          ]
        },
        "Code": {
          "S3Bucket": {
            "Fn::FindInMap": [
              "S3BucketMapping",
              {
                "Ref": "Environment"
              },
              "Value"
            ]
          },
          "S3Key": {
            "Ref": "BuildPath"
          }
        },
        "Tags": [
          {
            "Value": "TRAVEAZY",
            "Key": "LOB"
          },
          {
            "Value": "SEO",
            "Key": "PRODUCT"
          }
        ],
        "MemorySize": 2048,
        "Environment": {
          "Variables": {
            "STAGE": {
              "Ref": "Environment"
            },
            "JS_VERSION": {
              "Ref": "JsVersion"
            },
            "MAX_AJAX_RETRIES": "2",
            "DEBUG_MODE": "off",
            "DATE_FORMAT": "yyyy-MM-dd",
            "ALLOWED_SCRIPT_SRC": {
              "Fn::FindInMap": [
                "AllowedScriptSrc",
                {
                  "Ref": "Environment"
                },
                "Value"
              ]
            },
            "ALLOWED_CONNECT_SRC": {
              "Fn::FindInMap": [
                "AllowedConnectSrc",
                {
                  "Ref": "Environment"
                },
                "Value"
              ]
            },
            "ALLOWED_IMG_SRC": {
              "Fn::FindInMap": [
                "AllowedImgSrc",
                {
                  "Ref": "Environment"
                },
                "Value"
              ]
            },
            "ALLOWED_FRAME_SRC": {
              "Fn::FindInMap": [
                "AllowedFrameSrc",
                {
                  "Ref": "Environment"
                },
                "Value"
              ]
            },
            "ALLOWED_OBJECT_SRC": {
              "Fn::FindInMap": [
                "AllowedObjectSrc",
                {
                  "Ref": "Environment"
                },
                "Value"
              ]
            },
            "ALLOWED_STYLE_SRC": {
              "Fn::FindInMap": [
                "AllowedStyleSrc",
                {
                  "Ref": "Environment"
                },
                "Value"
              ]
            },
            "ALLOWED_FONT_SRC": {
              "Fn::FindInMap": [
                "AllowedFontSrc",
                {
                  "Ref": "Environment"
                },
                "Value"
              ]
            },
            "ALLOW_CORSORIGIN": {
              "Fn::FindInMap": [
                "AllowCorsOrigin",
                {
                  "Ref": "Environment"
                },
                "Value"
              ]
            }
          }
        },
        "Handler": "index.handler",
        "Role": {
          "Fn::GetAtt": [
            "ProxyFunctionRole",
            "Arn"
          ]
        },
        "Timeout": 900,
        "Runtime": "nodejs16.x",
        "VpcConfig": {
          "SecurityGroupIds": {
            "Fn::FindInMap": [
              "SecurityGroupIdsMapping",
              {
                "Ref": "Environment"
              },
              "Value"
            ]
          },
          "SubnetIds": {
            "Fn::FindInMap": [
              "SubnetIdsMapping",
              {
                "Ref": "Environment"
              },
              "Value"
            ]
          }
        }
      }
    },
    "LambdaLogGroup": {
      "Type": "AWS::Logs::LogGroup",
      "DependsOn": "ProxyFunction",
      "Properties": {
        "LogGroupName": {
          "Fn::Join": [
            "",
            [
              "/aws/lambda/",
              {
                "Ref": "ProxyFunction"
              }
            ]
          ]
        },
        "RetentionInDays": 1
      }
    }
  }
}
