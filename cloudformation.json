      "prod": {
        "Value": "*.googleapis.com"
      }
    },
    "AllowedConnectSrc": {
      "dev": {
        "Value": "*.googleapis.com"
      },
      "qa": {
        "Value": "*.googleapis.com"
      },
      "stage": {
        "Value": "*.googleapis.com"
      },
